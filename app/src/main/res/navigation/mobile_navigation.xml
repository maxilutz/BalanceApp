<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.balanceapp.mainActivity.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.balanceapp.mainActivity.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.balanceapp.mainActivity.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/setting"
        android:name="com.example.balanceapp.settingsActivity.SettingsActivity$SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/settings_activity"
        tools:ignore="DuplicateIds" />
    <fragment
        android:id="@+id/logout"
        android:name="com.example.balanceapp.mainActivity.setting.LogoutFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_logout"
        tools:ignore="DuplicateIds" />
</navigation>